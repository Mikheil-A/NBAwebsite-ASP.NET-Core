@model NBAwebsite.Models.ViewModels.Login

<link href="~/css/Pages/Register-Login.css" rel="stylesheet"/>

<article>
    <h1>Log in</h1>
    <hr />

    @{
        if (@ViewData["Message"] != null)
        {
            <p id="submitResult">
                @ViewData["Message"]
                <a href="@Url.Action("Register", "Account" )" style="color: #D8000C;">here</a>!
            </p>
        }
    }

    <form method="post" asp-controller="Account" asp-action="Login">
        @*<div asp-validation-summary="All"></div>*@
        <table>
            <tr>
                <td><label asp-for="Email"></label></td>
                <td>
                    <input asp-for="Email" type="email" />
                    <span asp-validation-for="Email" id="validation"></span>
                </td>
            </tr>

            <tr>
                <td><label asp-for="Password"></label></td>
                <td>
                    <input asp-for="Password" type="password"/>
                    <span asp-validation-for="Password" id="validation"></span>
                </td>
            </tr>
        </table>


        <input type="submit" value="Log in" />
    </form>

    <p id="redirectToRegister">
        If you don't have an account
        @*<a asp-controller="Account" asp-action="Register">Register here</a>.*@
        <a href="@Url.Action("Register", "Account")" style="color: black; margin-bottom:40px;"> Register here</a>.
    </p>
</article>